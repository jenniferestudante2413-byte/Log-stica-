        function showStep(id) {
            document.getElementById('content-default').classList.add('hidden');
            const display = document.getElementById('content-display');
            display.classList.remove('hidden');

            const step = data[id];
            document.getElementById('step-title').innerText = step.title;
            document.getElementById('step-desc').innerText = step.desc;

            const challengesList = document.getElementById('step-challenges');
            challengesList.innerHTML = step.challenges.map(c => `<li>${c}</li>`).join('');

            const techList = document.getElementById('step-tech');
            techList.innerHTML = step.tech.map(t => `<li>${t}</li>`).join('');
        }
